<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Job Tracker</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css">
</head>
<body>

    <header>
        <nav>
            <ul>
                <li><a href="/profile">Profile</a></li>
                <li><a href="/tracker">Job Tracker</a></li>
                <li><a href="/reviews">Company Reviews</a></li>
            </ul>
        </nav>
    </header> 

  <h1>Job Applications</h1>

  <div class="search-form-container">
    <h2>Search Applications</h2>
    <form method="GET" action="/tracker">
      <input type="text" name="q" placeholder="Search by job title or company..." required>
      <button type="submit">Search</button>
    </form>
  </div>

  <div class="review-form-container">
    <h2>Add Application</h2>
    <form method="POST" action="/applications/add">
      <div class="form-group"><label>Application ID:</label><input name="applicationId" required></div>
      <div class="form-group"><label>Job Title:</label><input name="jobTitle" required></div>
      <div class="form-group"><label>Company:</label><input name="company" required></div>
      <div class="form-group"><label>Status:</label><input name="status" required></div>
      <div class="form-group"><label>Location:</label><input name="location" required></div>
      <div class="form-group"><label>Date Applied:</label><input type="date" name="dateApplied" required></div>
      <div class="form-group"><label>Deadline:</label><input type="date" name="deadline" required></div>
      <div class="form-actions">
        <button type="submit" class="primary-btn">Add</button>
      </div>
    </form>
  </div>

  <div class="reviews-container">
    <h2>All Applications</h2>

    <% if (applications.length === 0) { %>
      <p>No job applications yet.</p>
    <% } else { %>
      <% applications.forEach(app => { %>
        <div class="review">
          <h3><%= app.jobTitle %> @ <%= app.company %></h3>
          <p><strong>ID:</strong> <%= app.applicationId %></p>
          <p><strong>Status:</strong> <%= app.status %></p>
          <p><strong>Location:</strong> <%= app.location %></p>
          <p><strong>Date Applied:</strong> <%= app.dateApplied.toISOString().slice(0, 10) %></p>
          <p><strong>Deadline:</strong> <%= app.deadline.toISOString().slice(0, 10) %></p>
          <form method="POST" action="/applications/delete/<%= app.applicationId %>">
            <button type="submit" class="primary-btn">Delete</button>
          </form>
          <form method="GET" action="/applications/edit/<%= app.applicationId %>">
            <button type="submit" class="primary-btn">Edit</button>
          </form>
        </div>
      <% }) %>
    <% } %>
  </div>

  <form action="/logout" method="POST">
    <button type="submit">Logout</button>
  </form>

</body>
</html>
